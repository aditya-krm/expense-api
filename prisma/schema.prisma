generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Profession {
  salary
  business
  student
  freelancer
  other
}

enum TransactionType {
  INCOME
  EXPENSE
  CREDIT_GIVEN // Money lent to someone
  CREDIT_RECEIVED // Money borrowed from someone
}

model User {
  id           String        @id @default(cuid())
  name         String
  email        String        @unique
  phone        String        @unique
  password     String
  profession   Profession?
  transactions Transaction[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Transaction {
  id          String          @id @default(cuid())
  title       String
  amount      Decimal
  type        TransactionType
  date        DateTime        @default(now())
  recurrence  String? // Daily, Weekly, Monthly, Yearly
  category    Category        @relation(fields: [categoryId], references: [id])
  categoryId  String
  user        User            @relation(fields: [userId], references: [id])
  userId      String
  description String?
  // For credit tracking
  relatedTo   String? // Name of person involved in credit
  dueDate     DateTime? // For credit transactions
  isPaid      Boolean? // For credit transactions
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model Category {
  id           String          @id @default(cuid())
  title        String
  icon         String?
  type         TransactionType // To categorize for income/expense/credit
  transactions Transaction[]
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  @@unique([title, type]) // Prevent duplicate categories for each type
}
